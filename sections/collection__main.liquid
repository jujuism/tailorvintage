

{% comment %}
** Collections - main view **
- Collection main area that holds the promotion banner, thumbnails and pagination
{% endcomment %}

{% comment %}Assign object as block or section{% endcomment %}
{% if type == 'block' %}
  {% assign object = block %}
{% else %}
  {% assign object = section %}
{% endif %}

{% assign id = object.id %}
{% comment %}Layout{% endcomment %}
{% assign width = object.settings.width %}
{% assign padding_top = object.settings.padding_top %}
{% assign padding_bottom = object.settings.padding_bottom %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = object.settings.css_class %}
{% assign custom_css = object.settings.custom_css %}

{% comment %} CSS {% endcomment %}
{% style %}
  .section__wrapper {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' -%}
      width: 100%;
      max-width: 95%;
    {%- endif %}
  }


  .on-subcollection-page.section__wrapper {
    {% if width == 'wide' -%}
      max-width: none;
    {%- endif %}
  }

  {% if object.settings.collection_breadcrumb == false %}
    .breadcrumb__container {
      display: none;
    }
  {% endif %}

  {% if object.settings.pagination_type != 'basic_pagination' %}
    .breadcrumb__page-count {
      display: none;
    }
  {% endif %}

  {% if object.settings.collection_tags == false %}
    .collection__tag-filter {
      display: none;
    }
  {% endif %}

  {% if object.settings.collection_sort == false %}
    .collection__sort-by-filter {
      display: none;
    }
  {% endif %}

  {% render 'css-loop',
          css: custom_css,
          id: id
  %}
{% endstyle %}

{% paginate collection.products by object.settings.pagination_limit %}

<div class="collection__main {{ css_class }}" data-collection-main>
  {% if object.settings.show_promo_banner %}
    <div class="collection-promo-banner container">
      <div class="banner__wrapper
                  one-whole
                  column
                  dark-overlay-{{ object.settings.image_darken }}
                  is-{{ object.settings.banner_height }}
                  has-margin-bottom">
        {% if object.settings.image != blank %}
          {% render 'image-element',
                  image: object.settings.image,
                  alt: object.settings.image.alt,
                  stretch_width: true
          %}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
        <div class="banner__content card-content">
          <div class="banner__text text-align-center">
            <h1 class="banner__heading title">{{ object.settings.promo_title }}</h1>
            {% if object.settings.promo_text != blank %}
              <div class="banner__subheading subtitle">{{ object.settings.promo_text }}</div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  {% if collection.products.size == 0 %}
    <div class="container container--no-products-in-collection text-align-center has-padding-bottom has-padding-top">
      <div class="one-whole column">
        <p>{{ 'collections.general.no_matches' | t }}</p>
      </div>
    </div>
  {% else %}
    <div class="collection-matrix__wrapper">
      <div class="collection__loading-icon button is-loading is-loading--icon-only"></div>
      <div class="container collection-matrix" {% if object.settings.pagination_type != 'basic_pagination' %}data-load-more--grid {% endif %}>
        {% assign products_per_row = object.settings.products_per_row %}
        {% render 'product-loop',
                products: products,
                products_per_row: products_per_row,
                limit: object.settings.pagination_limit,
                align_height: object.settings.align_height,
                height: object.settings.collection_height
        %}
      </div>
    </div>
  {% endif %}

  <div class="container container--pagination">
    <div class="one-whole column text-align-center">
      {% assign load_more_text = 'collections.general.pagination_button' | t %}
      {% render 'pagination',
              paginate: paginate,
              pagination_type: object.settings.pagination_type,
              load_more_text: load_more_text
      %}
    </div>
  </div>
</div>

{% comment %} JavaScript {% endcomment %}
<script
  type="application/json"
  data-section-id="{{ object.id }}"
  data-section-data
>
  {
    "enable_filter": {{ object.settings.collection_tags | json }},
    "enable_sorting": {{ object.settings.collection_sort | json }},
    "enable_breadcrumb": {{ object.settings.collection_breadcrumb | json}},
    "pagination_type": {{ object.settings.pagination_type | json }},
    "number_of_pages": {{ paginate.pages | json }}
  }
</script>

<script type="text/javascript">
{% for value in collection.metafields.placement.placement %}
$(".collection-matrix > .one-third:nth-child({{ collection.metafields.placement.placement[forloop.index0] }})").after("<div class='marketing-block {% if collection.metafields.video_id.video_id[forloop.index0] != blank %}video{% endif %} {{ collection.metafields.style.style[forloop.index0] }} {{ collection.metafields.alignment.alignment[forloop.index0] }}' style='background-color: {{ collection.metafields.bg_color.bg_color[forloop.index0] }}; {% if collection.metafields.bg_image.bg_image[forloop.index0] != blank %}{% for multi_images in collection.metafields.bg_image.bg_image %}{% for image in multi_images %}background-image: url({{ image.src }});{% endfor %}{% endfor %}{% endif %} color: {{ collection.metafields.text_color.text_color[forloop.index0] }};'><div class='text'><h2 style='color: {{ collection.metafields.text_color.text_color[forloop.index0] }};'>{{ collection.metafields.block_title.block_title[forloop.index0] }}</h2>{% if collection.metafields.block_description.block_description[forloop.index0] != blank %}<p>{{ collection.metafields.block_description.block_description[forloop.index0] }}</p>{% endif %}</div>{% if collection.metafields.cta_url.cta_url[forloop.index0] != blank %}<div class='btn'><a href='{{ collection.metafields.cta_url.cta_url[forloop.index0] }}' class='btn btn--primary' style='color: {{ collection.metafields.cta_text_color.cta_text_color[forloop.index0] }}; background: {{ collection.metafields.cta_bg_color.cta_bg_color[forloop.index0] }}'>{{ collection.metafields.cta_title.cta_title[forloop.index0] }}</a></div>{% endif %}{% if collection.metafields.video_id.video_id[forloop.index0] != blank %}<div class='video' style='position: absolute; z-index: 0'><video playsinline autoplay muted loop class='myVideo'><source src='{{ collection.metafields.video_id.video_id }}' type='video/mp4'></source></video></div>{% endif %}</div>");{% endfor %}
</script>

{% endpaginate %}

<script src="{{ 'z__jsCollection.js' | asset_url }}"></script>
